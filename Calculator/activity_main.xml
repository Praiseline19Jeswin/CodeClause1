<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/tv2"
        android:background="@color/black1"
        android:gravity="bottom"
        android:padding="10dp"
        android:maxLines="1"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="30sp"
        tools:ignore="RtlCompat">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:gravity="bottom"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:maxLines="1"
        android:id="@+id/tv1"
        android:layout_below="@+id/tv2"
        android:background="@color/black"
        android:text=""
        android:textSize="50sp"
        tools:ignore="RtlCompat">
    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv1"
        android:background="@color/grey"
        app:cardBackgroundColor="@color/grey"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7"
            android:background="@color/grey">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red"
                    android:id="@+id/ac"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="AC"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue1"
                    android:padding="5dp"
                    android:id="@+id/c"
                    android:textColor="@color/white"
                    android:text="C"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="("
                    android:id="@+id/open"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text=")"
                    android:id="@+id/close"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:id="@+id/sin"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="sin"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:id="@+id/cos"
                    android:textColor="@color/white"
                    android:text="cos"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="tan"
                    android:id="@+id/tan"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="log"
                    android:id="@+id/log"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="ln"
                    android:id="@+id/ln"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:id="@+id/fact"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="x!"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:id="@+id/square"
                    android:textColor="@color/white"
                    android:text="x²"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="√"
                    android:id="@+id/root"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="1/x"
                    android:id="@+id/inverse"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="÷"
                    android:id="@+id/div"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:id="@+id/seven"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="7"
                    android:textSize="15sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:id="@+id/eight"
                    android:textColor="@color/white"
                    android:text="8"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="9"
                    android:id="@+id/nine"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="*"
                    android:id="@+id/mul"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:id="@+id/four"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="4"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:id="@+id/five"
                    android:textColor="@color/white"
                    android:text="5"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="6"
                    android:id="@+id/six"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="-"
                    android:id="@+id/sub"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:id="@+id/one"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="1"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:id="@+id/two"
                    android:textColor="@color/white"
                    android:text="2"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="3"
                    android:id="@+id/three"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="+"
                    android:id="@+id/add"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:id="@+id/pi"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="π"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:id="@+id/zero"
                    android:textColor="@color/white"
                    android:text="0"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="."
                    android:id="@+id/dot"
                    android:textSize="17sp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blue1"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="="
                    android:id="@+id/equal"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>